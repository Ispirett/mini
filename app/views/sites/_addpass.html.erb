<% if !@site.locked && @feed.present? %>
<div class="dropdown-item">
  <%= form_for @site, url: site_pass_path(@site.name), :html => {:class => ''}, method: :patch do |f| %>
  <div class="field has-addons">
    <div class="control">
    <%= f.password_field :password, class: "input" %>
    </div>
    <div class="control">
    <%= f.submit "Add password", class: "button" %>
    </div>
  </div>
  <% end %>
</div>
<hr class="dropdown-divider">

<% end %>
