<% if @site.locked %>
  <p><strong><%= @site.name %></strong> / <span class="has-text-danger">locked ***</span></p>
  <% else %>
  <p><strong><%= @site.name %></strong> / <span class="has-text-success">open ~~~</span></p>
<% end %>




<% if session[@site.name.to_sym] == "unlocked" && @site.locked %>
  <p>currently: Unlocked</p>
  <%= button_to "Remove password", d_site_pass_path(@site.name), method: :patch %>
<% end %>
<hr>
